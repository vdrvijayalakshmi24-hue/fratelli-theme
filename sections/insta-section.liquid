{% comment %}
  sections/insta-grid-static.liquid
  - Hardcoded 4-image Instagram-style grid (no blocks).
  - Mirrors your React component layout & styling.
  - Make sure these files exist in /assets:
      image_5.png, image_6.png, image_7.png, image_8.png
{% endcomment %}

<section id="insta-grid-{{ section.id }}" class="insta-grid">
    <div class="insta-grid__inner">
      <h2 class="insta-grid__heading">{{ section.settings.heading }}</h2>
      <div class="insta-grid__spacer" aria-hidden="true"></div>
  
      <div class="insta-grid__grid">
        {%- assign images = "image_5.png|image_6.png|image_7.png|image_8.png" | split: "|" -%}
        {%- for filename in images -%}
          <div class="insta-grid__cell">
            <img
              src="{{ filename | asset_url }}"
              alt="insta-{{ forloop.index }}"
              class="insta-grid__img"
              loading="lazy"
              width="1000"
              height="1000"
            >
          </div>
        {%- endfor -%}
      </div>
    </div>
  
    {% style %}
      #insta-grid-{{ section.id }} {
        --insta-bg: {{ section.settings.bg_color }};
        --insta-heading-color: {{ section.settings.heading_color }};
        --insta-padding: {{ section.settings.padding }}px;
        background: var(--insta-bg);
        padding: var(--insta-padding);
      }
      #insta-grid-{{ section.id }} .insta-grid__inner {
        max-width: {{ section.settings.max_width }}px;
        margin: 0 auto;
      }
      #insta-grid-{{ section.id }} .insta-grid__heading {
        margin: 0;
        text-align: center;
        font-weight: 700;
        line-height: 1.1;
        color: var(--insta-heading-color);
        font-size: clamp(24px, 4vw, {{ section.settings.heading_size }}px);
        letter-spacing: .02em;
      }
      #insta-grid-{{ section.id }} .insta-grid__spacer { height: 1rem; }
  
      /* Grid mirrors your React: 2 columns, square cells */
      #insta-grid-{{ section.id }} .insta-grid__grid {
        display: grid;
        gap: 8px;
        grid-template-columns: repeat(2, 1fr);
      }
  
      #insta-grid-{{ section.id }} .insta-grid__cell {
        position: relative;
        width: 100%;
        padding-bottom: 100%;
        overflow: hidden;
        border-radius: {{ section.settings.radius }}px;
      }
  
      #insta-grid-{{ section.id }} .insta-grid__img {
        position: absolute;
        inset: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
        transition: transform .3s ease;
      }
      #insta-grid-{{ section.id }} .insta-grid__cell:hover .insta-grid__img {
        transform: scale(1.03);
      }
  
      /* Optional: more columns on desktop without changing mobile behavior */
      @media (min-width: 768px) {
        #insta-grid-{{ section.id }} .insta-grid__grid {
          grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
        }
      }
    {% endstyle %}
  </section>
  
  {% schema %}
  {
    "name": "Instagram grid (static)",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "FIND US ON INSTAGRAM"
      },
      {
        "type": "color",
        "id": "heading_color",
        "label": "Heading color",
        "default": "#8E1C21"
      },
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background color",
        "default": "#ffffff"
      },
      {
        "type": "range",
        "id": "heading_size",
        "label": "Heading size (px)",
        "min": 24,
        "max": 56,
        "step": 1,
        "default": 40
      },
      {
        "type": "range",
        "id": "padding",
        "label": "Section padding (px)",
        "min": 0,
        "max": 80,
        "step": 2,
        "default": 10
      },
      {
        "type": "range",
        "id": "radius",
        "label": "Image corner radius (px)",
        "min": 0,
        "max": 24,
        "step": 1,
        "default": 0
      },
      {
        "type": "range",
        "id": "max_width",
        "label": "Content max width (px)",
        "min": 800,
        "max": 1800,
        "step": 10,
        "default": 1200
      },
      {
        "type": "range",
        "id": "columns_desktop",
        "label": "Desktop columns",
        "min": 2,
        "max": 6,
        "step": 1,
        "default": 4
      }
    ],
    "presets": [
      { "name": "Instagram grid (static)" }
    ]
  }
  {% endschema %}
  