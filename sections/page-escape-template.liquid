      {%- form 'contact', class: 'Form Form--spacingTight' -%}
        {%- if form.posted_successfully? -%}
          <p class="Alert Alert--success">{{ 'contact.form.successfully_sent' | t }}</p>
        {%- endif -%}

        {%- if form.errors -%}
          <div class="Form__Alert Alert Alert--error">
            <ul class="Alert__ErrorList">
              {%- for field in form.errors -%}
                {%- if field == 'form' -%}
                  <li class="Alert__ErrorItem">{{ form.errors.messages[field] }}</li>
                {%- else -%}
                  <li class="Alert__ErrorItem"><strong>{{ form.errors.translated_fields[field] }}</strong> {{ form.errors.messages[field] }}</li>
                {%- endif -%}
              {%- endfor -%}
            </ul>
          </div>
        {%- endif -%}

        <div class="Form__Group">
          <div class="Form__Item">
            <input type="text" class="Form__Input" name="contact[name]" aria-label="{{ 'escape.form.name' | t }}" placeholder="{{ 'escape.form.name' | t }}" required {% if customer %}value="{{ customer.name }}"{% endif %}>
            <label class="Form__FloatingLabel">{{ 'escape.form.name' | t }}</label>
          </div>

          <div class="Form__Item">
            <input type="email" class="Form__Input" name="contact[email]" aria-label="{{ 'escape.form.email' | t }}" placeholder="{{ 'escape.form.email' | t }}" required {% if customer %}value="{{ customer.email }}"{% endif %}>
            <label class="Form__FloatingLabel">{{ 'escape.form.email' | t }}</label>
          </div>
        </div>
  
  		<div class="Form__Group">
          <div class="Form__Item">
            <input type="text" class="Form__Input" name="contact[phone]" aria-label="{{ 'escape.form.phone' | t }}" placeholder="{{ 'escape.form.phone' | t }}">
            <label class="Form__FloatingLabel">{{ 'escape.form.phone' | t }}</label>
          </div>
        </div>		
  
  		<div class="Form__Group">
          <div class="Form__Item">
            <input type="text" class="Form__Input" id="start_date" name="contact[start_date]" aria-label="{{ 'escape.form.start_date' | t }}" placeholder="{{ 'escape.form.start_date' | t }}">
            <label class="Form__FloatingLabel">{{ 'escape.form.start_date' | t }}</label>
          </div>

          <div class="Form__Item">
            <input type="text" class="Form__Input" id="end_date" name="contact[end_date]" aria-label="{{ 'escape.form.end_date' | t }}" placeholder="{{ 'escape.form.end_date' | t }}">
            <label class="Form__FloatingLabel">{{ 'escape.form.end_date' | t }}</label>
          </div>
          </div>

        <div class="Form__Item">
          <textarea name="contact[body]" cols="30" rows="10" class="Form__Textarea" aria-label="{{ 'escape.form.message' | t }}" placeholder="{{ 'escape.form.message' | t }}" required></textarea>
          <label class="Form__FloatingLabel">{{ 'escape.form.message' | t }}</label>
        </div>

        <button type="submit" class="Form__Submit Button Button--primary Button--full">{{ 'escape.form.submit' | t }}</button>
      {%- endform -%}
    
