{% comment %}
  sections/section-four.liquid
  - Intentionally minimal: no CSS, no child elements.
  - Only a section wrapper and schema so it can be added in the Theme Editor.
{% endcomment %}

<section id="section-four-{{ section.id }}" class="section-four">
    <style>
    .section-four {
        position: relative;
    }
    .section-four_content {
        position: absolute;
        width: 100%;
        height: 70vh;
        transform: rotate(180deg);
        background: linear-gradient(360deg, #8B8E8E 74.46%, rgba(0, 0, 0, 0) 100%);
        z-index: 2;
      }
      .section-four_content-bottom-inner {
        text-align: center;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        height: 100%;
        padding: 0 20px 50px 20px;
      }
      .section-four_content-bottom {
        width: 100%;
        height: 70vh;
        background: linear-gradient(0deg, #4D6028 74.46%, rgba(0, 0, 0, 0) 100%);
        position: relative;
        z-index: 2;
      }
  
      /* Underlay container (we’ll sticky its child video/canvas) */
      .section-four-video-wine-mobile {
        position: relative;
        z-index: 0 !important;     /* ensure presence even before JS runs */
      }

      .section-four-video-wine-mobile video,
        .section-four-video-wine-mobile canvas {
            z-index: 0;
            position: relative; /* or sticky/top:0 if you want it to stick */
            top: 80% !important;
        }
        .section-four-wine-mobile-h1 {
            font-family: "Utile", sans-serif; color: #ffffff;
            font-size: 36px; font-weight: 600;
          }
          .section-four-wine-mobile-p {
            font-family: system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
            color: #FFFFF8; font-size: 16px; letter-spacing: -0.04em;
          }
          .section-four-wine-mobile-wine-btn {
            background: #fff; color: #000; border: none; padding: 0.625rem 1.25rem;
            border-radius: 20px; font-weight: 600; cursor: pointer;
          }
          .section-four-video-wine-mobile {
            overflow: unset !important;
        }
    </style>
    <div class="section-four_content"></div>
    <div id="scrolly-video4-wine-mobile-{{ section.id }}" class="section-four-video-wine-mobile"></div>
    <div class="section-four_content-bottom">
        <div class="section-four_content-bottom-inner" id="section-four-inner-wine-mobile-{{ section.id }}">
            <h1 class="section-four-wine-mobile-h1" id="section-four-h1-wine-mobile-{{ section.id }}">Pour more into every moment</h1>
            <p class="section-four-wine-mobile-p" id="section-four-p1-wine-mobile-{{ section.id }}">
              Be it a quiet evening or a grand celebration, our wines bring richness and artistry to every occasion because there’s something for everyone
            </p>
            <div style="margin-top: 1.25rem;">
              <button type="button" class="section-four-wine-mobile-wine-btn" tabindex="-1">EXPLORE OUR RANGE</button>
            </div>
          </div>
    </div>
    <script>
        var sectionId   = "{{ section.id }}";
        var containerId = "scrolly-video4-wine-mobile-" + sectionId;
        var videoSrc = "https://cdn.shopify.com/videos/c/o/v/6c00be05195c41fca4970cfd73d96f8f.mp4";
        try {
          if (window.ScrollyVideo) {
            new ScrollyVideo({
              scrollyVideoContainer: containerId,
              src: videoSrc,
              cover: true,
              sticky: false,
            });
          }
        } catch (e) {
          console.warn("[SV4] ScrollyVideo error:", e);
        }
        var innerSel1 = "#section-four-inner-wine-mobile-" + sectionId;
        var overlaySel1 = ".section-four_content-bottom";
        var overlayEl1 = document.querySelector(overlaySel1);
        var innerEl1 = document.querySelector(innerSel1);
        if (window.gsap && window.ScrollTrigger && innerEl1) {
            gsap.registerPlugin(ScrollTrigger);
            gsap.set(innerEl1, { opacity: 0 });
    
            gsap.to(innerSel1, {
              scrollTrigger: {
                trigger: overlayEl1,
                start: 'top 40%',
                end: 'top 25%',
                scrub: false,
                markers: false,
                onEnter: () => {
                  gsap.to(innerSel1, {
                    opacity: 1,
                    duration: 1.2,
                    ease: 'power2.out'
                  });
                },
                onLeaveBack: () => {
                  gsap.to(innerSel1, {
                    opacity: 0,
                    duration: 0.6,
                    ease: 'power2.in'
                  });
                }
              }
            });
          } else {
            console.warn('[SV4] GSAP/ScrollTrigger missing — inner fade skipped.');
          }
    </script>
</section>

